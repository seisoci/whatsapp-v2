# Server Configuration
PORT=3001
NODE_ENV=production
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-secure-db-password
DB_DATABASE=whatsapp

# JWT Configuration
# IMPORTANT: Generate new secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate-your-own-secret-here
JWT_REFRESH_SECRET=generate-your-own-refresh-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# Rate Limiting - Auth Endpoints (login/register only)
AUTH_RATE_LIMIT_WINDOW=15
AUTH_RATE_LIMIT_MAX=20

# CORS - Add your frontend domain(s)
CORS_ORIGIN=https://yourdomain.com

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# MinIO S3 Configuration
MINIO_ENDPOINT=your-s3-endpoint
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=whatsapp

# WhatsApp Configuration
WHATSAPP_API_VERSION=v24.0
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
