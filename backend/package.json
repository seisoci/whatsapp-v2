{
  "name": "backend-auth-api",
  "version": "1.0.0",
  "description": "Secure authentication API with Bun, Hono, TypeORM, and PostgreSQL",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "migration:generate": "bun typeorm migration:generate",
    "migration:run": "bun typeorm migration:run",
    "migration:revert": "bun typeorm migration:revert",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "typeorm": "^0.3.20",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.5",
    "ioredis": "^5.3.2",
    "minio": "^7.1.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.11.0",
    "@types/multer": "^1.4.11",
    "bun-types": "latest"
  }
}
